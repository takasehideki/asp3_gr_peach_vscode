{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "name": "make",
    "type": "shell",
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": [
            "relative",
            "${workspaceRoot}"
        ],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    },
    "tasks": [
        {
            "label": "build allapps",
            "command": "make all",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean allapps",
            "command": "make clean",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "realclean allapps",
            "command": "cd apps ; make realclean",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build sample1",
            "command": "cd apps/sample1 ; make all",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean sample1",
            "command": "cd apps/sample1 ; make clean",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
